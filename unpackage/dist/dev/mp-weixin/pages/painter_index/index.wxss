#painter-wrapper {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
#painter-wrapper .painter-box {
  width: 375px;
  height: 375px;
  position: relative;
  overflow: hidden;
}
#painter-wrapper .painter-box .background-css {
  width: 375px;
  height: 375px;
}
#painter-wrapper .painter-box .icon-css {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 70px;
  height: 70px;
}
#painter-wrapper .button-preview {
  width: 90%;
  margin-top: 20px;
}
#painter-wrapper .show-text {
  width: 100vw;
  height: 120px;
  padding: 0 20px;
  box-sizing: border-box;
  margin-top: 20px;
  border: 1px solid rgba(255,255,255,0.6);
  border-radius: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
#painter-wrapper .show-text .text {
  font-size: 20px;
}
#painter-wrapper .show-text .subtitle {
  font-size: 16px;
}
#painter-wrapper .preview-box {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 2;
  background: #fff;
}
#painter-wrapper .preview-box .title {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 20px;
}
#painter-wrapper .preview-box .button-box {
  margin-top: 20px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 5%;
  box-sizing: border-box;
}
#painter-wrapper .preview-box .button-box .button-cancel {
  width: 45%;
}
#painter-wrapper .preview-box .button-box .button-confirm {
  width: 45%;
  color: #fff;
  background: #3684fe;
}
#painter-wrapper .preview-box .button-play {
  margin-top: 20px;
  width: 90%;
  color: #fff;
  background: #3684fe;
}

