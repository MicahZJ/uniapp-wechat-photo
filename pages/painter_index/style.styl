#painter-wrapper
  width 100vw
  height 100vh
  overflow hidden
  .painter-box
    width 375px
    height 375px
    position relative
    overflow hidden
    .background-css
      width 375px
      height 375px
    .icon-css
      position absolute
      left 0
      top 0
      z-index 1
      //transform translate(10px, 50px)
      width 70px
      height 70px
  .button-preview
    width 90%
    margin-top 20px
  .show-text
    width 100vw
    height 120px
    padding 0 20px
    box-sizing border-box
    margin-top 20px
    border 1px solid rgba(255, 255, 255, .6)
    border-radius 10px
    display flex
    flex-direction column
    justify-content space-around
    align-items flex-start
    .text
      font-size 20px
    .subtitle
      font-size 16px
  .preview-box
    position fixed
    width 100vw
    height 100vh
    z-index 2
    background white
    .title
      display inline-block
      width 100%
      text-align center
      font-size 20px
    .button-box
      margin-top 20px
      display flex
      justify-content space-between
      align-items center
      padding 0 5%
      box-sizing border-box
      .button-cancel
        width 45%
      .button-confirm
        width 45%
        color white
        background:rgba(54,132,254,1);
    .button-play
      margin-top 20px
      width 90%
      color white
      background:rgba(54,132,254,1);
