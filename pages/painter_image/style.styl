#mine-wrapper
  width 100vw
  height 100vh
  overflow hidden
  .painter-box
    width 375px
    height 375px
    position relative
    overflow hidden
    .background-css
      width 375px
      height 375px
    .icon-css
      position absolute
      left 0
      top 0
      z-index 1
      //transform translate(10px, 50px)
      width 80px
      height 80px
  .preview-box
    position fixed
    width 100vw
    height 100vh
    z-index 2
    background white
    .title
      display inline-block
      width 100%
      text-align center
      font-size 20px
    .button-box
      margin-top 20px
      display flex
      justify-content space-between
      align-items center
      padding 0 5%
      box-sizing border-box
      .button-cancel
        width 45%
      .button-confirm
        width 45%
        color white
        background:rgba(54,132,254,1);
    .tt
      overflow-x auto
    .button-play
      margin-top 20px
      width 90%
      color white
      background:rgba(54,132,254,1);
  .button-preview
    width 90%
    margin-top 10px
  .icon-box
    margin-top 10px
    width 100vw
    height auto
    padding 10px 20px
    box-sizing border-box
    display flex
    flex-wrap wrap
    justify-content flex-start
    align-items center
    border 1px solid rgba(0,0,0, .3)
    border-radius 10px
    .icon-css
      width 70px
      height 70px
      border-radius 10px
      border 1px dashed rgba(0,0,0, .5)
      margin 0 5px
